# ─── Core ────────────────────────────────────────────────────────────────────
subscription_id = "your-subscription-id"
environment     = "dev"
project         = "screenshare"
location        = "eastus"
pg_location     = "centralus"

# ─── PostgreSQL ──────────────────────────────────────────────────────────────
pg_admin_username = "pgadmin"
# pg_admin_password is auto-generated by Terraform and stored in Key Vault
# Retrieve: az keyvault secret show --vault-name kv-screenshare-dev --name PG-ADMIN-PASSWORD --query value -o tsv

# ─── Azure OpenAI ────────────────────────────────────────────────────────────
azure_openai_endpoint          = "https://your-resource.cognitiveservices.azure.com"
azure_openai_deployment_vision = "gpt-5-mini"

# ─── Auth ────────────────────────────────────────────────────────────────────
# api_key → set via TF_VAR_api_key env var for prod (empty = no auth, dev mode)

# ─── CORS ────────────────────────────────────────────────────────────────────
cors_extra_origins = [
  "http://localhost:3000",
]

# ─── Application Insights ───────────────────────────────────────────────────
# Option A: Create a new instance (dev)
appinsights_mode           = "create"
log_analytics_workspace_id = "/subscriptions/.../providers/Microsoft.OperationalInsights/workspaces/your-workspace"

# Option B: Reuse an existing instance (prod)
# appinsights_mode                       = "existing"
# existing_appinsights_connection_string = "InstrumentationKey=...;IngestionEndpoint=..."

# ─── Redis ────────────────────────────────────────────────────────────────────
# "none" = no Redis (in-memory session state, fine for dev)
# "create" = deploy Azure Cache for Redis
# "existing" = use external Redis URL
redis_mode = "none"
# redis_sku      = "Basic"   # Basic (~$17/mo), Standard (~$50/mo), Premium
# redis_capacity = 0         # 0=250MB, 1=1GB, 2=2.5GB, etc.
# existing_redis_url = "rediss://:password@host:6380"

# ─── Storage ─────────────────────────────────────────────────────────────────
# Leave empty to auto-generate name, or set to reuse existing
# storage_account_name = "stscreensharedevxxxx"

# ─── Key Vault RBAC ─────────────────────────────────────────────────────────
kv_admin_object_id = "your-user-object-id"  # az ad signed-in-user show --query id -o tsv
